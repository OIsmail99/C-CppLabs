int main()
{
    char choice = 0;
    printf("Choose A or B or C: ");
    scanf("%c", &choice);

    switch(choice){

case 'A':  printf("you chose A\n");
break;
case 'B': printf("you chose B\n");
break;
case 'C': printf("you chose C\n");
break;
default:
    printf("you choose something else!\n");
    }
    return 0;

#include <iostream>

using namespace std;

class OString{
private:
    char *str;
    int str_len;
public:
    int Strlen(){
    char i = 0;
    while(this->str[i] != '\0'){
        i++;
    }
    return i;

    }

    OString(char * input){
    int string_len = 0;
    while(input[string_len] != '\0')
    {
        string_len++;
    }
    str = new char[string_len];
    int i = 0;
    for(i = 0; i < string_len; i++){
        this->str[i] = input[i];
    }
    }

    void append(char * input){
    int j = 0;
    int i = 0;
    for(i = this->Strlen();input[j] != '\0';i++){
        str[i] = input[j];
        j++;
    }
    str[i] = '\0';
    }

    void display(){
    int i = 0;
    while(this->str[i] != '\0'){
        cout<<str[i];
        i++;
    }

    }


};

int main()
{
    OString str = "hello";
    cout<<str.Strlen()<<endl;
    str.append(" world");
    str.display();


    return 0;
}

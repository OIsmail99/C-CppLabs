#include <stdio.h>

int main(){
    int size;
    printf("Enter the size of the array: "); 
    scanf("%d", &size);
    
    int arr[size];
    for(int i = 0; i < size; i++){ //first loop for reading the array from the user
        printf("enter element at index %d:  ", i); 
        scanf("%d", &arr[i]);
    }
    printf("the array is: \n");
    
    for(int i =0; i < size; i++){ //second loop for printing the array
        printf("%d\n", arr[i]);
    }
    
    return 0;
}
